<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">

      <% flash.each do |msg_type, msg|%>
        <div class="alert alert-<%= msg_type %>"><%= msg %></div>
      <% end %>

      <%= yield %>
      
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
